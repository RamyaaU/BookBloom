@page
@model BookBloomRazor.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-2 mt-4 form-group row">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            @*<hr/>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-"></label>
            <input asp-for="Category.Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-"></label>
            <input asp-for="Category.DisplayOrder" type="text" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Category/Index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}